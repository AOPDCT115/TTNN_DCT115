@model IEnumerable<WebASP.Models.TypeCourse>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="text-center">
                <h2>CÁC LOẠI KHÓA HỌC TẠI TVV</h2>
            </div>
            <hr>
        </div>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="content">
        <div class="row">
            <div class="col-md-6">
                <h3 style="background-image: url(../@item.UrlImg); height: 300px; "></h3>
            </div>
            <div class="col-md-6">
                <div style="text-align:center; font-size:19px">
                    <h3>@item.TypeName</h3>
                    <p>@item.Introduce</p>
                    <br />
                    <h4>
                        @Html.ActionLink("Xem thêm", "XemThem", new { @MaKH = item.TypeCourseID }) |
                        @Html.ActionLink("Đăng ký", "DangKy", new { @MaKH = item.TypeCourseID }) |
                        @Html.ActionLink("Xem lịch học", "XemLichHoc", new { @MaKH = item.TypeCourseID })
                    </h4>
                </div>
            </div>
        </div>
    </div>
}
