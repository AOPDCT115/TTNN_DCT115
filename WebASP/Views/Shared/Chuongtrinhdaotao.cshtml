@using WebASP.Models

@{
    ViewBag.Title = "Chuongtrinhdaotao";
}

@{
    <div class="content">
        <div class="grid">
           @foreach (var item in (List<TypeCourse>)ViewBag.chuongtrinhdaotao)
            {
                <figure class="effect-zoe">
                    <img src="@item.UrlImg" alt="img25" />
                    <figcaption>
                        <a href="~/TypeCourses/XemThem?MaKH=@item.TypeCourseID">a</a>
                        <h4>@item.TypeName</h4>
                        <p class="description">
                            <a href="~/TypeCourses/XemThem?MaKH=@item.TypeCourseID" style="color: white">
                                @item.Introduce
                            </a>
                        </p>
                    </figcaption>
                </figure>
           }
        </div>
    </div>
}

