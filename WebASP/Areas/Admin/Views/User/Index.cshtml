@model PagedList.IPagedList<WebASP.Models.Student>
@using PagedList.Mvc;

@section jsFooter{
    <script src="/Content/admin/js/controller/userController.js"></script>
}
<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách người dùng
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "User", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success">Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>Tên học viên</th>
                                <th>Giới tính</th>
                                <th>Ngày sinh</th>
                                <th>Ngày đăng ký</th>
                                <th>Địa chỉ</th>
                                <th>Số điện thoại</th>
                                <th>Mail</th>
                                <th>Trạng thái</th>

                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.StudentID">

                                    <td>@item.Name</td>
                                    <td>@item.Gender</td>
                                    <td>@item.DateOfBirt</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.Address</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Mail</td>
                                    <td><a href="#" class="btn-active" data-id="@item.StudentID">@Html.Raw(item.Status ? "<strong>Kích hoạt</strong>" : "Khoá")</a></td>
                                    @*<td>
                                        <a href="/Admin/User/Edit/@item.StudentID">Sửa</a>
                                    </td>*@
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>