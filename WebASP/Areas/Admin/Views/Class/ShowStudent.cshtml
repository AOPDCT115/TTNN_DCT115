@model IEnumerable<WebASP.Models.StudentNew>

@section jsFooter{
    <script src="/Content/Admin/js/controller/showStudentController.js"></script>
}

<div class="row">

    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Danh sách học viên lớp</h4>
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("ShowStudent", "Class", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchStringSch" class="form-control" name="searchString" />
                                <input type="hidden" value="@ViewBag.ClassStudentid" class="form-control" name="classstudentid" hidden/>
                               
                            </div>
                            <div class="col-md-4">
                                
                                <button type="submit" class="btn btn-success">Tìm kiếm</button>
                               
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Lớp học</th>
                                <th>Tên học viên</th>
                                <th>Ngày tạo</th>
                                <th>Giới tính</th>
                                <th>Địa chỉ</th>
                                <th>Mail</th>
                                <th>Điện thoại</th>
                                <th>Thu phí</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.StudentID">
                                    <td>@item.ClassID</td>
                                    <td>@item.Name</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.Gender</td>
                                    <td>@item.Address</td>
                                    <td>@item.Mail</td>
                                    <td>@item.Phone</td>
                                    <td><a href="#" class="btn-active" data-id="@item.StudentID">@Html.Raw(item.Status ? "<strong>Đã thu</strong>" : "Chưa thu")</a></td>
                                    <td>
                                        <a href="/Admin/Class/Delete/@item.StudentID">Xoá</a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>   
