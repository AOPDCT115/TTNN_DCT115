@model PagedList.IPagedList<WebASP.Models.Schedule>

@using PagedList.Mvc;
@section jsFooter{
    <script src="/Content/admin/js/controller/courseController.js"></script>
}
<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Lịch học
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("LichHoc", "Class", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchStringSch" class="form-control" name="searchString" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success">Tìm kiếm</button>
                                <a class="btn btn-primary" href="/Admin/Class/CreateSch">Thêm mới</a>
                                    
                                <a class="btn btn-primary" href="/Admin/Class/Index">Quay lại lớp học</a>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Lịch học</th>
                                <th>Lớp học</th>
                                <th>Số tuần</th>
                                <th>Ngày học</th>
                                <th>Ngày bắt đầu</th>
                                <th>Thời gian học</th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ScheduleID">
                                    <td>@item.ScheduleID</td>
                                    <td>@item.ClassID</td>
                                    <td>@item.Week</td>
                                    <td>@item.Day</td>
                                    <td>@item.Dates</td>
                                    <td>@item.Times</td>
                                    <td><a href="#" class="btn-active" data-id="@item.ScheduleID">@Html.Raw(item.Status ? "<strong>Kích hoạt</strong>" : "Khoá")</a></td>
                                    <td>
                                        <a href="/Admin/Class/EditSch/@item.ScheduleID" >Sửa</a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>